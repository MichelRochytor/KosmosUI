{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Compilar Recurso",
      "type": "process",
      "command": "C:/msys64/mingw64/bin/windres.exe",
      "args": [
        "-I", "${workspaceFolder}/resource",
        "-I", "C:/msys64/mingw64/include",
        "-i", "${workspaceFolder}/resource/resource.rc",
        "-o", "${workspaceFolder}/output/resource.o",
        "-O", "coff",
        "-F", "pe-x86-64"
      ],
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {
          "PATH": "C:/msys64/mingw64/bin;${env:PATH}"
        }
      },
      "problemMatcher": ["$gcc"],
      "group": "build"
    },
    {
      "label": "Compilar Aplicação",
      "dependsOn": "Compilar Recurso",
      "type": "process",
      "command": "C:/msys64/mingw64/bin/gcc.exe",
      "args": [
        "-mwindows",
        "-I", "${workspaceFolder}/resource",
        "-I", "C:/msys64/mingw64/include",
        "-I", "${workspaceFolder}/import/kosmos",
        "-g",
        "-Wall",
        "-D_WIN32_WINNT=0x0A00",
        "-DWINVER=0x0A00",
        "-DUNICODE",
        "-D_UNICODE",
        "${workspaceFolder}/src/main.c",
        "${workspaceFolder}/import/kosmos/kosmos.c",
        "${workspaceFolder}/output/resource.o",
        "-o", "${workspaceFolder}/output/MeuApp.exe",
        "-lshcore",
        "-lcomctl32",
        "-lgdi32",
        "-luser32",
        "-static-libgcc",
        "-static-libstdc++",
        "-Wl,--subsystem,windows",
        "-municode"
      ],
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {
          "PATH": "C:/msys64/mingw64/bin;${env:PATH}"
        }
      },
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "Aplicar Manifest",
      "type": "process",
      "command": "M:/Windows Kits/10/bin/10.0.26100.0/x64/mt.exe",
      "args": [
        "-nologo",
        "-manifest",
        "${workspaceFolder}/import/kosmos/kosmos.exe.manifest",
        "-outputresource:${workspaceFolder}/output/MeuApp.exe;#1"
      ],
      "dependsOn": "Compilar Aplicação",
      "problemMatcher": []
    },
    {
      "label": "Build Completo",
      "dependsOn": [
        "Compilar Recurso",
        "Compilar Aplicação",
        "Aplicar Manifest"
      ],
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Executar Programa",
      "type": "shell",
      "command": "cmd",
      "args": [
        "/c",
        "start",
        "\"MeuApp\"",
        "/wait",
        "${workspaceFolder}/output/MeuApp.exe"
      ],
      "dependsOn": "Build Completo",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "focus": false
      }
    },
    {
      "label": "Apenas Executar",
      "type": "shell",
      "command": "cmd",
      "args": [
        "/c",
        "start",
        "\"MeuApp\"",
        "${workspaceFolder}/output/MeuApp.exe"
      ],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "focus": false
      }
    }
  ]
}